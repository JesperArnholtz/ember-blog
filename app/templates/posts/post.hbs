{{#if isEditing}}
  <p>{{input type="text" value=model.title}}</p>
  <p>{{input type="text" value=model.excerpt}}</p>
  <p>{{textarea value=model.body}}</p>
  <button {{action 'doneEditing'}}>Done</button>
{{else}}
  <button {{action 'edit'}}>Edit</button>
{{/if}}
<h1>{{model.title}}</h1>
<h2>by {{model.name}} <small class='muted'>({{format-date model.date}})</small></h2>

<hr>

<div class='intro'>
      {{model.excerpt}}
    </div>

    <div class='below-the-fold'>
      {{model.body}}
    </div>
